{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": false,

    "target": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Node",
    "module": "CommonJS",

    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "lib": ["ES2022"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
